# FlowTune Production Environment Configuration

# Application
NODE_ENV=production
PORT=3000
APP_NAME=FlowTune
APP_VERSION=1.0.0

# Database
DATABASE_URL=postgresql://flowtune:password@postgres:5432/flowtune
DB_HOST=postgres
DB_PORT=5432
DB_NAME=flowtune
DB_USER=flowtune
DB_PASSWORD=password

# Redis
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=flowtune-production-jwt-secret-key-2024
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=flowtune-refresh-token-secret-2024
REFRESH_TOKEN_EXPIRES_IN=30d

# Flow Blockchain
FLOW_ACCESS_NODE=https://rest-testnet.onflow.org
FLOW_PRIVATE_KEY=your-flow-private-key
FLOW_ACCOUNT_ADDRESS=your-flow-account-address
FLOW_NETWORK=testnet

# IPFS
IPFS_GATEWAY=https://ipfs.io/ipfs/
IPFS_API_URL=https://api.pinata.cloud
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_API_KEY=your-pinata-secret-key

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,audio/mpeg,audio/wav,audio/ogg
UPLOAD_DIR=./uploads

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Production specific
SERVE_FRONTEND=true
WAIT_FOR_DB=true
WAIT_FOR_REDIS=true
RUN_MIGRATIONS=true